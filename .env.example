# .env.example

# LLMs - Only Mistral API and Phi-3 LOCAL
MISTRAL_API_KEY=your-mistral-api-key

# Phi-3 via LOCAL Ollama (no API key needed)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=phi3:mini

# TTS (100% FREE - no API keys needed)
TTS_PROVIDER=huggingface_piper
TTS_LANGUAGE=en

# Optional: Sarvam for Indian languages
SARVAM_API_KEY=

# Database
DATABASE_URL=sqlite:///./video_synthesis.db

# Server
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# Directories
OUTPUT_DIR=generated_videos
TEMP_DIR=temp_files
LOG_DIR=logs

# LLM Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000